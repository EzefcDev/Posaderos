<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo1a"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imgVLogo"
        android:layout_width="119dp"
        android:layout_height="116dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:contentDescription="@string/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/lumen" />

    <TextView
        android:id="@+id/txtView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/txtView1"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/fondo3"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toEndOf="@+id/imgVLogo"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txtView2"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/fondo3"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.78"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtView1"/>


    <TextView
        android:id="@+id/txtView3"
        android:layout_width="399dp"
        android:layout_height="147dp"
        android:layout_marginStart="180dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="183dp"
        android:text="@string/txtView3"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider3" />

    <Button
        android:id="@+id/Boton"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="282dp"
        android:layout_height="180dp"
        android:backgroundTint="@color/fondo2"
        android:shadowColor="#B5ACAC"
        android:shadowDx="@dimen/material_emphasis_medium"
        android:shadowDy="@dimen/material_emphasis_high_type"
        android:shadowRadius="@dimen/material_emphasis_high_type"
        android:text="@string/button"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/basico_organge2"
        android:textSize="48sp"
        android:textStyle="bold"
        app:cornerRadius="?attr/dialogPreferredPadding"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtView3"
        app:strokeColor="@color/basico_red2"
        app:strokeWidth="4dp" />

    <Button
        android:id="@+id/Boton1"
        android:layout_width="223dp"
        android:layout_height="28dp"
        android:background="@android:drawable/progress_horizontal"
        android:text="@string/Boton1"
        android:textColor="@color/design_default_color_error"
        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.531"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="431dp" />

    <Button
        android:id="@+id/Boton2"
        android:layout_width="234dp"
        android:layout_height="22dp"
        android:layout_marginTop="8dp"
        android:background="@android:drawable/progress_horizontal"
        android:text="@string/Boton2"
        android:textColor="#FB8C00"
        android:textSize="27sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Boton1" />

    <Button
        android:id="@+id/Boton3"
        android:layout_width="213dp"
        android:layout_height="17dp"
        android:layout_marginTop="8dp"
        android:background="@android:drawable/progress_horizontal"
        android:onClick="Invitado"
        android:text="@string/Boton3"
        android:textColor="#3E4095"
        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Boton2" />

    <ImageButton
        android:id="@+id/ImBFace"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="27dp"
        android:background="@drawable/circleface"
        android:contentDescription="@string/ImBface"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Boton3"
        app:layout_constraintVertical_bias="1.0" />

    <ImageButton
        android:id="@+id/ImBinst"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/instagram"
        android:contentDescription="@string/ImaBinst"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Boton3"
        app:layout_constraintVertical_bias="1.0" />

    <ImageButton
        android:id="@+id/ImBtwit"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="24dp"

        android:contentDescription="@string/ImaBtwit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.62"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Boton3"
        app:layout_constraintVertical_bias="1.0" />

    <View
        android:id="@+id/divider3"
        android:layout_width="400dp"
        android:layout_height="2dp"
        android:layout_marginTop="8dp"
        android:background="@color/fondo2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtView2" />

</androidx.constraintlayout.widget.ConstraintLayout>